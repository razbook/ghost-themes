        <script type="text/javascript" src="{{asset "js/jquery.js"}}"></script>

    {{! Add all code style here }}
    <!--<link rel="stylesheet" href="{{asset "css/default.css"}}">-->
    
    <script src="{{asset "js/highlight.pack.js"}}"></script>
  
  {{! Page Highlight }}
  {{{block "initHighlight"}}}

<script>

</script>
</head>
<body>
{{#is "home"}}
    {{#if @blog.cover_image}}
        <div style="background:url({{@blog.cover_image}}) no-repeat center center;" class="cover cover-border hidden-sm hidden-xs">
            <div class="blog-description">
                <h1>{{@blog.description}}</h1>
            </div>
        </div>
    {{/if}}
{{/is}}
<div class="container">
<div class="row">
<div class="col-md-2 hidden-sm hidden-xs">
{{> "navbar"}}
</div>
<div class="col-md-10 col-xs-12">
    {{{body}}}
</div>
    {{#if @labs.subscribers}}
        <div class="col-md-10 hidden-xs hidden-sm">
            <div class="subscribe-form">
                {{subscribe_form}}
            </div>
        </div>

    {{/if}}

</div>
</div>

    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
          <i class="el el-stop footer-icon"></i>
            &copy; {{date format="YYYY"}} <a href="{{@blog.url}}">{{@blog.title}}</a> All rights reserved.<br><br>
            Coder Ghost Theme created by <a href="https://www.mbejda.com">Milos Bejda</a>
          </div>
          <div class="col-xs-6 text-right hidden-sm hidden-xs">Proudly published with <a href="https://ghost.org">Ghost</a></div>
        </div>
      </div>
    </footer>

    <a href="#" class="back-to-top"><span class="fa fa-angle-up fa-2x"></span></a>

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! The main JavaScript file for Casper }}
    <script src="{{asset "js/modernizr.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/index.js"}}"></script>

</body>
</html>
