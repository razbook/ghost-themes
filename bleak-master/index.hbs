{{!< default}}

<div class="index-posts">

  {{#is "tag"}}{{#tag}}
  <div class="tag-header">
    <span class="name">{{name}}</span>

    {{#if description}}
    <span class="tail">{{description}}</span>
    {{else}}
    <span class="tail">&nbsp;a collection<span class="by"> by <a href="/">{{@blog.title}}</a></span></span>
    {{/if}}

  </div>
  {{/tag}}{{/is}}

  {{#foreach posts}}
    <a href="{{url}}">{{>index_post}}</a>
  {{/foreach}}
  {{#if pagination}}{{pagination}}{{/if}}

</div>
