{{#foreach posts}}
    <article class="block block--inset block--list">
        <h2 class="block-title post-featured" itemprop="headline">
            <a href="{{url}}">{{title}}</a>
        </h2>
        <div class="block-postMetaWrap u-textAlignCenter">
            <time datetime="{{published_at}}">{{date format="YYYY/MM/DD"}}</time>
        </div>
        <section class="block-snippet block-snippet--subtitle grap" itemprop="about">
            {{#if feature_image}}
                <p class="with-img">
                    <img src="{{img_url feature_image}}" alt="" width="100%"/>
                </p>
            {{/if}}
            <p>{{excerpt words="11"}}...<br>
                <a href="{{url}}" class="more-link">Read More.</a>
            </p>
        </section>
        <div class="block-footer">
            By {{author.name}} . In {{tags}}
        </div>
    </article>
{{/foreach}}