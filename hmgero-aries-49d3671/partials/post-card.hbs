<article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
    </a>
    {{/if}}
    <div class="post-card-content">
        <header class="post-card-header">
            {{#if primary_tag}}
            <a href="{{url}}" class="post-card-tags">{{primary_tag.name}}</a>
            {{/if}}
            <h2 class="post-card-title">
                <a class="post-card-title-link" href="{{url}}">{{title}}</a>
            </h2>
        </header>

        <footer class="post-card-footer">
            <div class="author">
                {{#primary_author}}
                <a href="{{url}}">
                    {{#if profile_image}}
                    <img class="avatar" src="{{profile_image}}" alt="{{name}}" />
                    {{else}}
                    <img class="avatar" src="https://static.hmgero.com/avatar.jpeg" alt="avatar">
                    {{/if}}
                    <span class="name">{{name}}</span>
                </a>
                {{/primary_author}}
            </div>
            <div class="published-date">
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            </div>

        </footer>
    </div>
</article>