{{#if default_author_in_ghost}}
    {{#if default_author_slug}}
        {{#get "users" slug=default_author_slug as |author|}}
            {{#author}}
                {{> usercard
                    profile_image=profile_image
                    name=name
                    bio=bio
                    website=website
                    facebook=facebook
                    twitter=twitter
                }}
            {{/author}}
        {{/get}}
    {{/if}}
{{/if}}

