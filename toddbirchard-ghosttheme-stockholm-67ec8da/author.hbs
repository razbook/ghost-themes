<!-- start site's main content area -->
<section class="content-wrap">
	<div class="container">
		<div class="row">
			{{! insert sidebar partial}}
			{{> author-sidebar}}
			<!-- start main post area -->
			<div class=" main-content">
				{{> cover-author}}
				<div class="postlist">
				{{> loop}}
			</div>
				{{pagination}}
			</div>
			<!-- end main post area -->
		</div>
	</div>
</section>
<!-- end sites main content area -->
