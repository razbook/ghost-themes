<!-- start widget -->
{{#get "posts" limit="4" filter="tags:-[hash-hidden,Roundup,roundup]"}}
<div class="widget recent">
	<h4 class="title">Recent</h4>
	<div class="recent-post">
		{{#foreach posts}}
			<div class="recent-single-post">
				<a href="{{url}}" class="post-title">{{title}}</a><div class="date">{{date format="MMMM DD, YYYY"}}</div>
			</div>
		{{/foreach}}
	</div>
</div>
{{/get}}
<!-- end widget -->
