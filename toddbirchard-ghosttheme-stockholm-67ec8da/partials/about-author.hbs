<!-- start about the author -->
{{#foreach authors include="count.posts"}}
	<div class="about-author author-card-large clearfix">
		{{#if profile_image}}
			<a href="{{url}}" class="avatar"><img src="{{profile_image}}" alt="{{name}} Author image"></a>
		{{else}}
			<a href="{{url}}" class="avatar"><img src="{{asset "images/default-user-image.jpg"}}" alt="{{name}} Author image"></a>
		{{/if}}
		<div class="details">
			<div class="author">
				<a href="{{url}}">{{name}}</a>
			</div>
			<span class="post-count"><i class="fal fa-pencil"></i><a href="{{url}}">{{#get "posts" include="count.posts"}}{{plural count.posts empty=(t "0 Posts") singular=(t "% Post") plural=(t "% Posts")}}{{/get}}</a></span>
			{{#if location}}
				<span class="loaction"><i class="fal fa-home"></i>{{location}}</span>
			{{/if}}
			{{#if website}}
				<span class="website"><a href="{{website}}" targer="_BLANK"><i class="fal fa-globe"></i>{{t "Website"}}</a></span>
			{{else}}
				<span class="website"><a href="https://hackersandslackers.com/author/{{slug}}" targer="_BLANK"><i class="fal fa-globe"></i>{{t "Website"}}</a></span>
			{{/if}}
			{{#if twitter}}
				<span class="twitter"><a href="{{twitter_url}}"><i class="fab fa-twitter"></i>{{twitter}}</a></span>
			{{/if}}
			{{#if facebook}}
				<span class="facebook"><a href="{{facebook_url}}"><i class="fab fa-facebook"></i></a></span>
			{{/if}}
			{{#if bio}}
				<div class="bio">{{{bio}}}</div>
			{{/if}}
		</div>

	</div>
{{/foreach}}
<!-- end about the author -->
