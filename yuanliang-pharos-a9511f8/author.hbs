{{!< default}}

{{! The big cover on the left }}
{{#author}}
<aside class="cover" {{#if cover_image}} style="background-image: url({{cover_image}});"
	{{else}}
		{{#if @blog.cover_image}} style="background-image: url({{@blog.cover_image}});"{{/if}}
	{{/if}}>
	<div class="cover-content">
		<div class="container">
		    {{#if @blog.logo}}
            <div class="cover-logo">
               <img src="{{@blog.logo}}" alt="{{@blog.title}}" class="big-logo"> 
            </div>            
            {{else}}
            <h1 class="cover-headline">{{@blog.title}}</h1>
            {{/if}}			
			<p class="cover-text">{{@blog.description}}</p>
		</div>			
	</div>
</aside>
{{/author}}

{{! The main content area on the author page on the right }}
<main class="content">
    {{! The tag below includes author details - partials/author.hbs }}
	{{> author-details}}
	{{! The tag below includes the post loop - partials/loop.hbs }}
	{{> loop}}
</main>